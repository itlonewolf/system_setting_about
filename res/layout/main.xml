<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
		>


	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/phone_num" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
			android:hint="inoput phone num"/>
	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="send msg"
			android:id="@+id/send_msg" android:layout_below="@+id/editText" android:layout_alignParentLeft="true"
			android:layout_marginLeft="43dp" android:layout_marginTop="60dp"/>
	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="make a call"
			android:id="@+id/make_a_call" android:layout_alignTop="@+id/send_msg" android:layout_alignParentRight="true"
			android:layout_marginRight="37dp"/>
	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="call record"
			android:id="@+id/call_recode"
			android:layout_below="@+id/send_msg" android:layout_alignRight="@+id/send_msg"
			android:layout_marginTop="40dp"/>
	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="is wifi open?"
			android:id="@+id/confirm_wifi" android:layout_centerVertical="true" android:layout_toRightOf="@+id/call_recode"/>
</RelativeLayout>

